{{!
    @template format_flexsections/sectionstatus
    Section complition/submission status.
}}

{{#cmlastaccess}}
    <span class="cmlastaccess">{{#str}} cmlastaccess, format_flexsections {{/str}}</span>
    <a class="cmlastaccess-link ml-2" href="{{{cmurl}}}">{{cmname}}</a>
{{/cmlastaccess}}

{{#firstrow}}
<div class="d-flex align-items-center mb-3" id="firstrow">
    <i class="fa-light fa-hourglass-start info-block-icon text-primary d-flex align-items-center justify-content-center"></i>
    <span class="info-block-value text-secondary px-2">{{value}}</span>
    <span class="info-block-text">{{label}}</span>
</div>
{{/firstrow}}

{{#secondrow}}
<div class="d-flex align-items-center mb-3" id="secondrow">
    <i class="fa-light fa-triangle-exclamation info-block-icon text-danger"></i>
    <span class="info-block-value text-secondary px-2">{{value}}</span>
    <span class="info-block-text">{{label}}</span>
</div>
{{/secondrow}}

{{#thirdrow}}
<div class="d-flex align-items-center mb-3" id="thirdrow">
    <i class="fa-light fa-alarm-clock info-block-icon text-info"></i>
    <span class="info-block-value text-secondary px-2">{{value}}</span>
    <span class="info-block-text">{{label}}</span>
</div>
{{/thirdrow}}